!!!
%html(ng-app="Seer")
  - min = Rails.env.development? ? '' : '.min'
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Seer"
      %meta{:content => content_for?(:description) ? yield(:description) : "Seer", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome#{min}.css"
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    #login{:role => "main"}
      .centerbox
        = yield
    / ! end of #main

    -#= javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.2.0-rc.3/angular#{min}.js"
    -#= javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.2.0-rc.3/angular-route#{min}.js"
    -#= javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.2.0-rc.3/angular-resource#{min}.js"
    -#= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/angular-ui/0.4.0/angular-ui#{min}.js"
    -#= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.6.0/ui-bootstrap-tpls#{min}.js"
    = javascript_include_tag 'application'
