!!!
%html
  - min = Rails.env.development? ? '' : '.min'
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'LDM'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Ldm'}"}
    = stylesheet_link_tag 'application', media: 'all'
    = stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.2.0/css/font-awesome#{min}.css"
    = stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr#{min}.css"
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %main{:role => "main"}
      .container
        = render 'layouts/messages'
        = yield

  = javascript_include_tag 'application'
  = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.3.0/bootbox#{min}.js"
  = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr#{min}.js"

= render 'layouts/dialogs'

